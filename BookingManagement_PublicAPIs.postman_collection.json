{
	"info": {
		"_postman_id": "booking-management-public-apis",
		"name": "Booking Management - Public APIs",
		"description": "Public API endpoints for hotel and offer operations",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Hotels",
			"item": [
				{
					"name": "Get Hotel by Slug",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/hotels/hotel-demo",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"v1",
								"hotels",
								"hotel-demo"
							]
						},
						"description": "Get hotel information by slug"
					},
					"response": []
				}
			]
		},
		{
			"name": "Offers",
			"item": [
				{
					"name": "Search Offers",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"checkIn\": \"2024-12-25\",\n  \"checkOut\": \"2024-12-28\",\n  \"guests\": 2,\n  \"roomsCount\": 1\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/v1/hotels/hotel-demo/offers:search",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"v1",
								"hotels",
								"hotel-demo",
								"offers:search"
							]
						},
						"description": "Search for offers for a hotel. Returns list of offers with offerId that can be used for recheck."
					},
					"response": []
				},
				{
					"name": "Recheck Offer",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"offerId\": \"OWN-123\",\n  \"checkIn\": \"2024-12-25\",\n  \"checkOut\": \"2024-12-28\",\n  \"guests\": 2,\n  \"roomsCount\": 1\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/v1/offers:recheck",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"v1",
								"offers:recheck"
							]
						},
						"description": "Recheck offer availability and validity. Use offerId from search response (format: OWN-xxx or SUP-xxx)."
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "authToken",
			"value": "user-123",
			"type": "string"
		}
	]
}

