	"item": [
		{
			"name": "Bookings",
			"item": [
				{
					"name": "Create Booking - HotelBeds",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Response has booking ID\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('supplierBookingId');",
									"    pm.expect(jsonData.bookingStatus).to.eql('CONFIRMED');",
									"});",
									"",
									"// Save booking ID for later use",
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('bookingId', jsonData.supplierBookingId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"hotelId\": \"hotel-123\",\n  \"checkInDate\": \"2024-12-01\",\n  \"checkOutDate\": \"2024-12-05\",\n  \"numberOfGuests\": 2,\n  \"customerName\": \"John Doe\",\n  \"customerEmail\": \"john.doe@example.com\",\n  \"customerPhone\": \"+1234567890\",\n  \"offerPayloadJson\": \"{\\\"supplierCode\\\":\\\"HOTELBEDS\\\",\\\"supplierHotelId\\\":\\\"HB-HOTEL-123\\\",\\\"rateKey\\\":\\\"RATE-KEY-456\\\",\\\"roomCode\\\":\\\"ROOM-789\\\",\\\"currency\\\":\\\"USD\\\",\\\"expectedTotalPriceMinor\\\":10000}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/bookings",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"bookings"
							]
						},
						"description": "Creates a new booking with HotelBeds supplier. The offerPayloadJson contains the supplier-specific rate information."
					},
					"response": []
				},
