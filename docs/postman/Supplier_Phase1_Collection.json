							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Status is SOLD_OUT\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('status', 'SOLD_OUT');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Debug-Key",
								"value": "{{debugKey}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"supplierCode\": \"HOTELBEDS\",\n  \"offerPayload\": { \"forceSoldOut\": true }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/internal/suppliers/offers/recheck",
