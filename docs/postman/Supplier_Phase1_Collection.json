{
	"info": {
		"_postman_id": "supplier-phase1-collection",
		"name": "Supplier Phase-1 APIs",
		"description": "Postman collection for testing Phase-1 supplier mapping and stub lifecycle endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
