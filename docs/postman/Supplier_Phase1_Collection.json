	"item": [
		{
			"name": "1. Mapping APIs",
			"item": [
				{
					"name": "1.1 POST mapping (ACTIVE)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test(\"Response contains mapping details\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('hotelId');",
									"    pm.expect(jsonData).to.have.property('supplierCode', 'HOTELBEDS');",
									"    pm.expect(jsonData).to.have.property('status', 'ACTIVE');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"supplierCode\": \"HOTELBEDS\",\n  \"supplierHotelId\": \"HB-123\",\n  \"status\": \"ACTIVE\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/123/supplier-mapping",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"v1",
								"admin",
								"hotels",
								"123",
								"supplier-mapping"
							]
						},
						"description": "Create an ACTIVE mapping for hotel 123 with HOTELBEDS supplier"
					},
					"response": []
				},
				{
					"name": "1.2 GET mapping",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response is an array\", function () {",
									"    pm.response.to.be.json;",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"    pm.expect(jsonData.length).to.be.at.least(1);",
									"});",
									"",
									"pm.test(\"Contains HOTELBEDS ACTIVE mapping\", function () {",
									"    var jsonData = pm.response.json();",
									"    var hasActiveHotelbeds = jsonData.some(function(mapping) {",
									"        return mapping.supplierCode === 'HOTELBEDS' && mapping.status === 'ACTIVE';",
									"    });",
									"    pm.expect(hasActiveHotelbeds).to.be.true;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/123/supplier-mapping",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"v1",
								"admin",
								"hotels",
								"123",
								"supplier-mapping"
							]
						},
						"description": "Get all mappings for hotel 123"
					},
					"response": []
				},
				{
					"name": "1.3 Conflict test (2nd ACTIVE not allowed)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 409 Conflict\", function () {",
									"    pm.response.to.have.status(409);",
									"});",
									"",
									"pm.test(\"Response contains error message\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('error');",
									"    pm.expect(jsonData).to.have.property('message');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"supplierCode\": \"TRAVELLANDA\",\n  \"supplierHotelId\": \"TL-999\",\n  \"status\": \"ACTIVE\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/123/supplier-mapping",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"v1",
								"admin",
								"hotels",
								"123",
								"supplier-mapping"
							]
						},
						"description": "Try to create second ACTIVE mapping - should fail with 409"
					},
					"response": []
				},
				{
					"name": "1.4 Validation test (ACTIVE without supplierHotelId)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 400 or 409\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([400, 409]);",
									"});",
									"",
									"pm.test(\"Response contains error about supplierHotelId\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('message');",
									"    var message = jsonData.message.toLowerCase();",
									"    pm.expect(message).to.include('supplierhotelid');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"supplierCode\": \"HOTELBEDS\",\n  \"status\": \"ACTIVE\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/124/supplier-mapping",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"v1",
								"admin",
								"hotels",
								"124",
								"supplier-mapping"
							]
						},
						"description": "Try to create ACTIVE mapping without supplierHotelId - should fail validation"
					},
					"response": []
				},
				{
					"name": "1.5 GET non-existing mapping",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 404\", function () {",
									"    pm.response.to.have.status(404);",
									"});",
									"",
									"pm.test(\"Response contains error\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('error');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/99999/supplier-mapping",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"v1",
								"admin",
								"hotels",
								"99999",
								"supplier-mapping"
							]
						},
						"description": "Get mappings for non-existing hotel - should return 404"
					},
					"response": []
				}
			],
			"description": "Tests for supplier mapping admin APIs"
		},
		{
			"name": "2. Stub Lifecycle (Debug Endpoints)",
			"item": [
				{
					"name": "2.A Search offers",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response is an array with 1-3 offers\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"    pm.expect(jsonData.length).to.be.at.least(1);",
									"    pm.expect(jsonData.length).to.be.at.most(3);",
									"});",
									"",
									"pm.test(\"Offer contains required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.length > 0) {",
									"        var offer = jsonData[0];",
									"        pm.expect(offer).to.have.property('cancellationSummary');",
									"        pm.expect(offer).to.have.property('perNightBreakdown');",
									"        pm.expect(offer).to.have.property('taxesAndFees');",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Debug-Key",
								"value": "{{debugKey}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"supplierCode\": \"HOTELBEDS\",\n  \"hotelId\": \"123\",\n  \"supplierHotelId\": \"HB-123\",\n  \"checkIn\": \"2026-01-08\",\n  \"checkOut\": \"2026-01-10\",\n  \"adults\": 2,\n  \"children\": 0,\n  \"rooms\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/internal/suppliers/offers/search",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"internal",
								"suppliers",
								"offers",
								"search"
							]
						},
						"description": "Search for offers from HOTELBEDS supplier"
					},
					"response": []
				},
