				{
					"name": "2.C Recheck PRICE CHANGE",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Status is PRICE_CHANGED\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('status', 'PRICE_CHANGED');",
									"});",
									"",
									"pm.test(\"New price is returned\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('newTotalPriceNullable');",
									"    pm.expect(jsonData.newTotalPriceNullable).to.not.be.null;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Debug-Key",
								"value": "{{debugKey}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"supplierCode\": \"HOTELBEDS\",\n  \"offerPayload\": { \"forcePriceChange\": true }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/internal/suppliers/offers/recheck",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"internal",
