								"offers",
								"recheck"
							]
						},
						"description": "Recheck offer with forcePriceChange flag - should return PRICE_CHANGED with new price"
					},
					"response": []
				},
				{
					"name": "2.D Create booking",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response contains supplierBookingRef\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('supplierBookingRef');",
									"    pm.expect(jsonData.supplierBookingRef).to.include('HB-BOOK-');",
									"});",
									"",
									"pm.test(\"Status is CONFIRMED\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('status', 'CONFIRMED');",
									"});",
									"",
									"// Save booking ref for cancel test",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('lastBookingRef', jsonData.supplierBookingRef);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Debug-Key",
								"value": "{{debugKey}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"supplierCode\": \"HOTELBEDS\",\n  \"offerPayload\": { \"offerId\": \"OFFER-1\" },\n  \"guestPayload\": { \"name\": \"Test\", \"email\": \"test@test.com\" }\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/internal/suppliers/bookings/create",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"internal",
								"suppliers",
								"bookings",
								"create"
							]
						},
						"description": "Create a booking with HOTELBEDS supplier"
					},
					"response": []
				},
