	"item": [
		{
			"name": "0. Setup & Health" ,
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/actuator/health",
							"host": ["{{baseUrl}}"],
							"path": ["actuator", "health"]
						},
						"description": "Check if the application is running"
				}
			}
	]},
		{
			"name": "1. Admin - Setup Phase",
			"item": [
				{
					"name": "Create Hotel",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"hotelId\", jsonData.id);",
									"    // Generate slug from hotel name (same logic as backend)",
									"    var hotelName = jsonData.name || '';",
									"    var slug = hotelName.toLowerCase()",
									"        .trim()",
									"        .replace(/\\s+/g, '-')",
									"        .replace(/[^a-z0-9\\-]/g, '')",
									"        .replace(/-+/g, '-')",
									"        .replace(/^-|-$/g, '');",
									"    pm.collectionVariables.set(\"hotelSlug\", slug);",
									"    console.log('Hotel created - ID: ' + jsonData.id + ', Slug: ' + slug);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"id\": \"hotel-001\",\n    \"name\": \"Grand Hotel Mumbai\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "hotels"]
						},
						"description": "Create a new hotel. This is the first step in setup."
					}
				},
				{
					"name": "Update Hotel",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Grand Hotel Mumbai - Updated\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/{{hotelId}}",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "hotels", "{{hotelId}}"]
						},
						"description": "Update hotel information"
					}
				},
				{
					"name": "Create Room Type",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"roomTypeId\", jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"id\": \"DELUXE\",\n    \"name\": \"Deluxe Room\",\n    \"maxGuests\": 2\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/{{hotelId}}/room-types",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "hotels", "{{hotelId}}", "room-types"]
						},
						"description": "Create a room type for the hotel. Create multiple room types (DELUXE, SUITE, STANDARD, etc.)"
					}
				},
				{
					"name": "Update Room Type",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Deluxe Room - Updated\",\n    \"maxGuests\": 3\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/room-types/{{roomTypeId}}",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "room-types", "{{roomTypeId}}"]
						},
						"description": "Update room type information"
					}
				},
				{
					"name": "Bulk Upsert Inventory",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"roomTypeId\": \"{{roomTypeId}}\",\n    \"startDate\": \"2025-01-15\",\n    \"endDate\": \"2025-02-15\",\n    \"allotmentQty\": 10,\n    \"stopSell\": false\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/{{hotelId}}/inventory/bulk-upsert",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "hotels", "{{hotelId}}", "inventory", "bulk-upsert"]
						},
						"description": "Bulk set inventory for a date range. Creates/updates inventory rows for each date from startDate (inclusive) to endDate (exclusive)"
					}
				},
				{
					"name": "Get Inventory",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/{{hotelId}}/inventory?roomTypeId={{roomTypeId}}&start=2025-01-15&end=2025-02-15",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "hotels", "{{hotelId}}", "inventory"],
							"query": [
								{
									"key": "roomTypeId",
									"value": "{{roomTypeId}}"
								},
								{
									"key": "start",
									"value": "2025-01-15"
								},
								{
									"key": "end",
									"value": "2025-02-15"
								}
							]
						},
						"description": "Get inventory for a hotel. Optional filters: roomTypeId, start date, end date"
					}
				},
				{
					"name": "Update Inventory Row",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"allotmentQty\": 5,\n    \"stopSell\": true\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/inventory/{{inventoryRowId}}",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "inventory", "{{inventoryRowId}}"]
						},
						"description": "Update a specific inventory row by ID. Get the ID from Get Inventory response"
					}
				},
				{
					"name": "Get Supplier Mapping",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/{{hotelId}}/supplier-mapping",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "hotels", "{{hotelId}}", "supplier-mapping"]
						},
						"description": "Get all supplier mappings for a hotel"
					}
				},
				{
					"name": "Create Supplier Mapping",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"supplierCode\": \"HOTELBEDS\",\n    \"supplierHotelId\": \"12345\",\n    \"supplierRoomTypeCode\": \"DLX\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/admin/hotels/{{hotelId}}/supplier-mapping",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "admin", "hotels", "{{hotelId}}", "supplier-mapping"]
						},
						"description": "Create or update supplier mapping for a hotel"
					}
				}
			],
			"description": "Admin APIs for setting up hotels, room types, and inventory"
		},
		{
			"name": "2. Public - Customer Flow",
			"item": [
				{
					"name": "Get Hotel by Slug",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/hotels/{{hotelSlug}}",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "hotels", "{{hotelSlug}}"]
						},
						"description": "Get hotel information by slug (auto-generated from hotel name)"
					}
				},
				{
					"name": "Search Offers",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.offers && jsonData.offers.length > 0) {",
									"        pm.collectionVariables.set(\"offerId\", jsonData.offers[0].offerId);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"checkIn\": \"2025-01-20\",\n    \"checkOut\": \"2025-01-25\",\n    \"guests\": 2,\n    \"roomsCount\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/hotels/{{hotelSlug}}/offers:search",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "hotels", "{{hotelSlug}}", "offers:search"]
						},
						"description": "Search available offers (rooms with pricing) for a hotel"
					}
				},
				{
					"name": "Recheck Offer",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"offerId\": \"{{offerId}}\",\n    \"checkIn\": \"2025-01-20\",\n    \"checkOut\": \"2025-01-25\",\n    \"guests\": 2\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/offers:recheck",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "offers:recheck"]
						},
						"description": "Recheck offer availability and validity before booking"
					}
				},
				{
					"name": "Create Booking",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"bookingId\", jsonData.bookingId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"hotelId\": \"{{hotelId}}\",\n    \"roomTypeId\": \"{{roomTypeId}}\",\n    \"checkIn\": \"2025-01-20\",\n    \"checkOut\": \"2025-01-25\",\n    \"guestName\": \"John Doe\",\n    \"guestEmail\": \"john.doe@example.com\",\n    \"guestPhone\": \"+1234567890\",\n    \"roomsCount\": 1,\n    \"occupancy\": {\n        \"adults\": 2,\n        \"children\": 0\n    },\n    \"offerId\": \"{{offerId}}\",\n    \"idempotencyKey\": \"booking-{{$randomUUID}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "bookings"]
						},
						"description": "Create a new booking (DRAFT status). Booking expires in 15 minutes if not confirmed."
					}
				},
				{
					"name": "Get Booking",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/bookings/{{bookingId}}",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "bookings", "{{bookingId}}"]
						},
						"description": "Get booking details by ID"
					}
				},
				{
					"name": "Confirm Booking",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"idempotencyKey\": \"confirm-{{$randomUUID}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/v1/bookings/{{bookingId}}/confirm",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "bookings", "{{bookingId}}", "confirm"]
						},
						"description": "Confirm a booking. Transitions: DRAFT → RECHECKING → PENDING_CONFIRMATION → CONFIRMED"
					}
				},
				{
					"name": "Cancel Booking",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer user-123",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/v1/bookings/{{bookingId}}/cancel",
							"host": ["{{baseUrl}}"],
							"path": ["v1", "bookings", "{{bookingId}}", "cancel"]
						},
						"description": "Cancel a booking. Only CONFIRMED bookings can be cancelled."
					}
				}
			],
			"description": "Public APIs for customer booking flow"
		},
