{
	"info": {
		"_postman_id": "hotelsystems-ai-collection",
		"name": "Hotelsystems.ai - Complete API Collection",
		"description": "Complete API collection for Hotelsystems.ai booking management system. Follow the flow: Setup → Search → Booking → Management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
